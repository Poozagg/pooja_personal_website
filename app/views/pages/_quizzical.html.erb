<div class="project-card">
  <div class="d-flex bd-highlight">
    <div class="p-2 flex-grow-1 bd-highlight">
      <h4> Quizzical </h4>
    </div>

    <div class="p-2 bd-highlight">
      <%= link_to "https://quizzical-24.netlify.app/", target: "_blank" do %>
        <i class="project-website-link fa-solid fa-link"></i>
      <% end %>
    </div>

    <div class="p-2 bd-highlight">
      <%= link_to "https://github.com/Poozagg/quizzical", target: "_blank" do %>
        <i class="project-github-link fab fa-github"></i>
      <% end %>
    </div>
    <div class="p-2 bd-highlight">
      <%= render 'modal_quizzical' %>
    </div>
  </div>
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "Quizzical_1.png", class: "d-block w-100", alt:"..." %>
      </div>
      <div class="carousel-item">
        <%= image_tag "Quizzical_2.png", class: "d-block w-100", alt:"..." %>
      </div>
      <div class="carousel-item">
        <%= image_tag "Quizzical_3.png", class: "d-block w-100", alt:"..." %>
      </div>
      <div class="carousel-item">
        <%= image_tag "Quizzical_4.png", class: "d-block w-100", alt:"..." %>
      </div>
      <div class="carousel-item">
        <%= image_tag "Quizzical_5.png", class: "d-block w-100", alt:"..." %>
      </div>
    </div>
  </div>
  <div>
    <div class="project-tech-stack">
      <%= image_tag("https://raw.githubusercontent.com/devicons/devicon/master/icons/html5/html5-original-wordmark.svg", alt: "html", width: 30, height: 30) %>
      <%= image_tag("https://raw.githubusercontent.com/devicons/devicon/master/icons/css3/css3-original-wordmark.svg", alt: "css3", width: 30, height: 30) %>
      <%= image_tag("https://raw.githubusercontent.com/devicons/devicon/master/icons/javascript/javascript-original.svg", alt: "javascript", width: 30, height: 30) %>
      <%= image_tag("react-logo.png", alt: "react", width: 30, height: 30, style: "color: white;") %>
    </div>
  </div>
</div>
