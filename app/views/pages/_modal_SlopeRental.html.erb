<%= link_to '<i class="project-info-link fa-solid fa-circle-info"></i>'.html_safe, '#myModal', 'data-bs-toggle' => 'modal', 'data-bs-target' => '#Modal' %>


<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel">SlopeRentals</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Website for renting the perfect ski gear for your holiday adventures. Discover a wide range of high-quality equipment to make your skiing experience unforgettable. Say goodbye to the hassle of purchasing gear, and hello to convenient rentals with SlopeRentals.
        <div class="project-video">
          <%= get_vimeo_iframe('https://vimeo.com/908621982?autoplay=1', '450px', '450px') %>
        </div>
        <h6>Team size: 4 <i class="fa-solid fa-people-group"></i> </h6>
        <h6>Project delivered: 1 week <i class="fa-regular fa-calendar-days"></i> </h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
